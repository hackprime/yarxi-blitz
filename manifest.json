{
    "manifest_version": 2,
    "name": "Yarxi Blitz",
    "version": "0.1",

    "description": "Well known japanese-russian interactive dictionary now available in your browser.",

    "permissions": [
        "webNavigation"
    ],
    "icons": {
        "16": "icon16.ico"
    },
    "web_accessible_resources": [
        "yarxi.original.css",
        "yarxi.css",

        "dia.png",
        "one.png",
        "shim.gif",
        "tarr.png",
        "tri.png"
    ],
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        // "css": ["yarxi.css"],
        "js": ["yarxi.js"]
    }]
}
